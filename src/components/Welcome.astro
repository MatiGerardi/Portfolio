---
import Grid from "./Grid.astro";
import BentoGrid from "./BentoGrid.astro";
---

<div>
  <main class="px-10 py-0 flex flex-col items-center min-h-screen">
    <div
      id="welcome"
      class="flex flex-col items-center bg-zinc-800 min-w-screen py-20"
    >
      <h1 class="text-6xl font-bold text-white mb-4">Matias Gerardi</h1>
      <h2 class="text-4xl font-bold text-yellow-300 mb-4">
        Software Developer
      </h2>
    </div>

    <div id="personal-info" class="personal-info bg-gray-950">
      <p class="text-lg text-gray-300 max-w-2xl p-6">
        My name is Matias, I am a Full Stack Developer passionate about creating
        web applications that are both functional and visually appealing.
        Explore my portfolio to see some of the projects I've worked on!
      </p>
      <section class="flex flex-col items-center py-10">
        <h2 id="projects" class="text-3xl font-bold text-white mb-6">
          Projects
        </h2>
        <Grid />
      </section>

      <BentoGrid />
    </div>
  </main>
</div>

<style>
  .personal-info {
    min-width: 100vw;
    display: flex;
    flex-direction: column;
    align-items: center;
    /* background-color: hsla(225, 0%, 8%, 1); */
    background:
      radial-gradient(
        circle at 50% 50%,
        hsla(63, 46%, 28%, 1) 0px,
        transparent 50%
      ),
      hsla(240, 10%, 4%, 1);
  }
</style>
